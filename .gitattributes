# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.html text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.xml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Git config
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf
README.md text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
